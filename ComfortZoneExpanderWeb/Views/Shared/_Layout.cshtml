<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComfortZoneExpander</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComfortZoneExpanderWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootsWatchTheme.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />

</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <!-- Container wrapper -->
            <div class="container">

                <!-- Left links -->

                <div class="d-flex align-items-center">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" >Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Register</a>
                        </li>

                    </ul>
                </div>
            </div>
            <!-- Collapsible wrapper -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>

    <main class="bg-light">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-200">
                    <div class="col col-lg-9 col-xl-7">
                        <div class="card" style="border-radius: 15px;" width="100px">
                            <div class="card-body p-5">

                                <div class="text-center mb-4 pb-2">
                                    <img src="https://cdn-icons.flaticon.com/png/512/3965/premium/3965814.png?token=exp=1655739967~hmac=a3d03289fc1e0fa0af107970513a5ab4"
                                         alt="Challenge" width="100">
                                </div>

                                <figure class="text-center mb-0">
                                    @*<blockquote class="blockquote">*@
                                    <p class="pb-2">
                                        <i class="fa-xs text-primary"></i>
                                        <span class="lead font-italic">
                                            Organise an activity with someone you
                                            <br />
                                            have never socialised with
                                        </span>
                                        <br />
                                        <i class="fa fa-refresh"></i>
                                    </p>
                                    @*</blockquote>*@
                                    @*                                    <figcaption class="blockquote-footer mb-0">
                                    Thomas Edison
                                    </figcaption>*@

                                </figure>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <div class="container">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.2.0/mdb.min.js" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
